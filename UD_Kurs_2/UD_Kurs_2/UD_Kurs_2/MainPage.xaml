<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UD_Kurs_2.MainPage" BackgroundColor="#AAFF">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalTextAlignment="Center"  Text="Школа танцев DanceMaster" HorizontalOptions="Center" FontSize="40" Margin="0,50,0,0"></Label>
            <StackLayout HorizontalOptions="Center" Margin="0,60,0,0">
                <Label x:Name="Massag" HorizontalTextAlignment="Center" Text="Добро пожаловать" HorizontalOptions="Center" FontSize="30" WidthRequest="390"></Label>
                <Entry x:Name="Login" HorizontalOptions="Center" Placeholder="Логин" FontSize="25" WidthRequest="120" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" MaxLength="6" ></Entry>
                <Entry x:Name="Password" HorizontalOptions="Center" Placeholder="Пароль" FontSize="25" WidthRequest="120" IsPassword="True" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" MaxLength="6" ></Entry>
                <Button Text="Войти" Clicked="Button_Clicked" HorizontalOptions="Center" FontSize="25" TextColor="#808080" BackgroundColor="#ffffff"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
